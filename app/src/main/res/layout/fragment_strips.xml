<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.brandon.register.StripsFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">
        <Button
            android:text="3pc Strip Only"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:id="@+id/threeStrip"/>
        <Button
            android:text="6pc Strip Only"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:id="@+id/sixStrip"/>
        <Button
            android:text="12pc Strip Only"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:id="@+id/twelveStrip"/>
        <Button
            android:text="3pc Strip Meal"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:id="@+id/threeStripMeal"/>
        <Button
            android:text="6pc Strip Meal"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:id="@+id/sixStripMeal"/>
        <Button
            android:text="12pc Strip Meal"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:id="@+id/twelveStripMeal"/>
        <Button
            android:text="Tender Wedges for 2"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:id="@+id/tendersWedgesForTwo"/>
        <Button
            android:text=""
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1" />
        <Button
            android:text=""
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1" />
        <Button
            android:text=""
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1" />
    </GridLayout>
</ScrollView>
